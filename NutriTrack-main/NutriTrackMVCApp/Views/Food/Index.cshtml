@model IEnumerable<NutriTrackMVCApp.Models.Food>

@{
    ViewData["Title"] = "Food List";
    Layout ="_Layout";
}

<div class="container">
    <h2 class="my-4">Food Items</h2>

    <!-- Food items container with a horizontal flex layout -->
    <div class="food-flex-container">
        @foreach (var item in Model)
        {
            <div class="food-card">
                <!-- Display food image -->
                <img src="@item.ImageURL" alt="@item.Name" class="food-image">

                <div class="food-card-body">
                    <!-- Food name and price -->
                    <h5>@item.Name</h5>
                    <p>
                        <strong>Price:</strong> @item.Price NOK<br />
                        <strong>Weight:</strong> @item.Weight g
                    </p>

                    <!-- Button to view details -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View Details</a>
                </div>
            </div>
        }
    </div>
</div>






