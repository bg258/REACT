@model NutriTrackMVCApp.Models.Food

@{
    ViewData["Title"] = "Delete Food";
}

<h2>Delete Food</h2>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <h4>Food</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Food Group</dt>
        <dd class="col-sm-10">@Model.FoodGroup</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Weight</dt>
        <dd class="col-sm-10">@Model.Weight</dd>

        <dt class="col-sm-2">Energy</dt>
        <dd class="col-sm-10">@Model.Energy</dd>

        <dt class="col-sm-2">Fat</dt>
        <dd class="col-sm-10">@Model.Fat</dd>

        <!-- Repeat this pattern for all fields like Saturated Fat, Carbohydrates, etc. -->
        
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

